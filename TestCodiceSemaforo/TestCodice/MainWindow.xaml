        <Ellipse x:Name="Giallo3"  HorizontalAlignment="Left" Height="70" Margin="420,160,0,0" Stroke="Yellow" VerticalAlignment="Top" Width="70" Fill="White"/>
        <Ellipse x:Name="Giallo4"  HorizontalAlignment="Left" Height="70" Margin="420,235,0,0" Stroke="Yellow" VerticalAlignment="Top" Width="70" Fill="White"/>
        <Ellipse x:Name="Giallo5"  HorizontalAlignment="Left" Height="70" Margin="420,310,0,0" Stroke="Yellow" VerticalAlignment="Top" Width="70" Fill="White"/>

    </Grid>
</Window>
